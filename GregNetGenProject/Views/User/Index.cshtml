@{
    ViewData["Title"] = "User Maintainence";
}

@model ICollection<GregNetGenProject.Areas.Identity.Data.GregNetGenProjectUser>


<h1>User Maintainence</h1>

<div>
    <a asp-action="Create">Create New</a>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find User: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    @if (@Model != null && Model.Any())
    {
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {                  
                    <tr>
                      <th scope="row">@user.Id</th>
                      <td>@user.FirstName</td>
                      <td>@user.Surname</td>
                      <td>@user.Email</td>
                      <td>
                          <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                      </td>
                    </tr>
               }
            </tbody>
        </table>
    }

</div>



<div class="text-center">



</div>