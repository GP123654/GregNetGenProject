@model GregNetGenProject.Core.ViewModels.EditUserViewModel
@{
}


<div class="container">
  <main>

      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Edit User</h4>

        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6">
              <label asp-for="@Model.User.FirstName" class="form-label">First name</label>
                <input asp-for="@Model.User.FirstName" class="form-control" value="@Model.User.FirstName" aria-required="true">
                <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
            </div>

            <div class="col-sm-6">
                <label asp-for="@Model.User.Surname" class="form-label">Surname</label>
                <input asp-for="@Model.User.Surname" class="form-control" value="@Model.User.Surname" aria-required="true">
                <span asp-validation-for="@Model.User.Surname" class="text-danger"></span>
            </div>
           
            </div>

        <div class="row g-3">
        <div class="col-sm-6">
                <label asp-for="@Model.User.Email" class="form-label">Email</label>
                <input asp-for="@Model.User.Email" class="form-control" value="@Model.User.Email" aria-required="true">
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>

            <div class="col-sm-6">
                <label asp-for="@Model.User.CellularNum" class="form-label">Cellular Number</label>
                <input asp-for="@Model.User.CellularNum" class="form-control" value="@Model.User.CellularNum" aria-required="true">
                <span asp-validation-for="@Model.User.CellularNum" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-12">
            <label asp-for="@Model.User.Hobbies" class="form-label">Cellular Number</label>
            <textarea asp-for="@Model.User.Hobbies" class="form-control" value="@Model.User.Hobbies" aria-required="true"></textarea>
            <span asp-validation-for="@Model.User.Hobbies" class="text-danger"></span>
        </div>

          <hr class="my-4">

          <h4 class="mb-3">User Roles</h4>

          <div class="my-3">

              @foreach (var role in @Model.Roles)
              {
            <div class="form-check">
              <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required="">
              <label class="form-check-label" for="credit">@role.Name</label>
            </div>

          }

          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
        </form>
      </div>
    </div>
  </main>
</div>
